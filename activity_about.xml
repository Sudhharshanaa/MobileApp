<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sudarsannalagandla.axdroid.About">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@android:color/holo_blue_light"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="9dp">

        <Button
            android:id="@+id/Back_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/Settings_Lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Back_Btn"
            android:text="Settings"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Back_Btn"
            android:layout_toLeftOf="@+id/Settings_Lbl"
            android:layout_toStartOf="@+id/Settings_Lbl"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_alignBottom="@+id/About_Lbl" />

        <TextView
            android:id="@+id/About_Lbl"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/Settings_Lbl"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/Settings_Lbl"
            android:layout_below="@+id/Settings_Lbl"
            android:gravity="bottom"
            android:text="About SalesRep"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Aboutdesc_Lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:text="SalesRep innovative solutions drive sales and gross margins while improving custimer satisfaction along the entire supply chain."
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
